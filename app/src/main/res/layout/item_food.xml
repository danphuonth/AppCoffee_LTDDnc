<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/smallSpace"
    android:background="@drawable/background_shadow"
    >



    <ImageView
        android:id="@+id/imagef"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="@dimen/mediumSpace"
        android:scaleType="fitCenter"
        android:src="@drawable/americano" />

    <TextView
        android:id="@+id/namef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imagef"
        android:text="Americano"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/largeFontSize" />

    <TextView
        android:id="@+id/pricef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namef"
        android:layout_marginTop="@dimen/mediumSpace"
        android:layout_toRightOf="@id/imagef"
        android:text="GiÃ¡: 44000"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/mediumFontSize" />

    <TextView
        android:id="@+id/quantify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:text="0" />
</RelativeLayout>