<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvNameTable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/green"
        android:text="Bàn 1.A"
        android:textColor="@color/white"
        android:paddingTop="40dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/tvMaDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvNameTable"
        android:text="Mã đơn hàng"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMaDon"
        android:layout_alignStart="@+id/tvMaDon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="dd/mm/yyyy-00:00:00" />

    <TextView
        android:id="@+id/tvtotalPriceOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNameTable"
        android:layout_alignBottom="@+id/tvNameTable"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="37dp"
        android:text="200000"
        android:textColor="@color/colorRed"
        android:textSize="20dp" />
</RelativeLayout>