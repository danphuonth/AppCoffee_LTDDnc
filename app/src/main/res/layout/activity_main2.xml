<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/res"
        android:padding="@dimen/smallSpace">

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Milk Tea"
            android:textColor="@color/teal_700"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvPriceFood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFoodName"
            android:layout_alignStart="@+id/tvFoodName"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:text="59000"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvFoodName"
            android:layout_alignTop="@+id/tvFoodName"
            android:layout_alignEnd="@+id/tvPrice"
            android:layout_alignBottom="@+id/tvPriceFood"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorRed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvTotalPriceFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvAmount"
            android:layout_alignBottom="@+id/tvAmount"
            android:layout_marginStart="-91dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="-1dp"
            android:layout_toEndOf="@+id/tvAmount"
            android:text="59 000"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/tvAmount"
            android:layout_alignBottom="@+id/tvAmount"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="-5dp"
            android:background="@drawable/ic_baseline_remove_circle_outline_24"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/im"
        android:src="@drawable/ic_baseline_event_seat_24"

        ></ImageView>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"/>
</RelativeLayout>