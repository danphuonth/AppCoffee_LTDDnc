<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HistoryDetailFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Thông tin đơn hàng"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Bàn" />

    <TextView
        android:id="@+id/tv_nametable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:layout_marginTop="10dp"
        android:text="Nhóm 14"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:background="@color/colorTextHint" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/line"
        android:text="Mã đơn hàng" />

    <TextView
        android:id="@+id/tv_maDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_alignStart="@+id/tv3"
        android:layout_marginTop="10dp"
        android:text="19506103412002"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorTextHint" />


    <TextView
        android:id="@+id/tv4"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Thời gian"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:layout_alignStart="@+id/tv4"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="23-06-2022 13:00" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_datetime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:background="@color/colorTextHint" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_datetime"
        android:layout_alignTop="@+id/line3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Sản phẩm đã chọn"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sanpham"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/tv5"
        tools:listitem="@layout/row_foodtable">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_sanpham"
        android:layout_alignStart="@+id/tv_datetime"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Tổng cộng"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_datetime"
        android:layout_alignTop="@+id/tv6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Tổng cộng"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_maDH"
        android:layout_alignTop="@+id/tv6"
        android:layout_marginStart="00dp"
        android:layout_marginTop="30dp"
        android:text="1200000đ"
        android:textColor="@color/black"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv7"
        android:layout_alignTop="@+id/tv7"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Số tiền thanh toán"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_total"
        android:layout_alignTop="@+id/tv7"
        android:layout_marginStart="00dp"
        android:layout_marginTop="30dp"
        android:text="1200000đ"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp" />

</RelativeLayout>