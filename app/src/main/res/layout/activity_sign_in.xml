<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/cf4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="COFFEEVUI"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/cf2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/email_signin"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:background="@color/cf5"
        android:hint="  Email"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_account_box_white_24dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/pass_signin"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint=" Mật khẩu"
        android:background="@color/cf5"
        android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_signin"
        app:layout_constraintStart_toStartOf="@+id/email_signin"
        app:layout_constraintTop_toBottomOf="@+id/email_signin" />

    <CheckBox
        android:id="@+id/check_DangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Ghi nhớ đăng nhập"
        app:layout_constraintStart_toStartOf="@+id/pass_signin"
        app:layout_constraintTop_toBottomOf="@+id/pass_signin">

    </CheckBox>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Đăng nhập"
        android:backgroundTint="@color/cf3"
        app:layout_constraintStart_toStartOf="@+id/pass_signin"
        app:layout_constraintTop_toBottomOf="@+id/pass_signin" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cf3"
        android:text="Đăng ký"
        app:layout_constraintEnd_toEndOf="@+id/pass_signin"
        app:layout_constraintTop_toTopOf="@+id/btn_sign_in" />

    <TextView
        android:id="@+id/btn_Forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>