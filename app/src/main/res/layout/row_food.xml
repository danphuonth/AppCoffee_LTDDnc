<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/smallSpace"
    android:background="@drawable/background_shadow"
    >



    <ImageView
        android:id="@+id/imagef"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="@dimen/mediumSpace"
        android:scaleType="fitCenter"
        android:src="@drawable/americano" />

    <TextView
        android:id="@+id/namef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imagef"
        android:text="Americano"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/largeFontSize" />

    <TextView
        android:id="@+id/pricef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namef"
        android:layout_marginTop="@dimen/mediumSpace"
        android:layout_toRightOf="@id/imagef"
        android:text="GiÃ¡: 44000"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/mediumFontSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_amount">


        <ImageView

            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/smallSpace"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/atvQuantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/smallSpace"
            android:text="1"
            android:textColor="#000000"

            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/smallSpace"
            android:src="@drawable/ic_plus" />
    </LinearLayout>
</RelativeLayout>